@model TaskModel
@{
    ViewData["Title"] = "Task Details";
}
<h2>Task Details</h2>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Due Date</dt>
    <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Remarks</dt>
    <dd class="col-sm-10">@Model.Remarks</dd>
    <dt class="col-sm-2">Created On</dt>
    <dd class="col-sm-10">@Model.CreatedOn</dd>
    <dt class="col-sm-2">Last Updated</dt>
    <dd class="col-sm-10">@Model.LastUpdatedOn</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
