@model IEnumerable<TaskModel>
@{
    ViewData["Title"] = "Tasks";
}
<h2>Task List</h2>
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchString" class="form-control w-50 d-inline" placeholder="Search..." />
    <button type="submit" class="btn btn-secondary ms-2">Search</button>
    <a asp-action="Create" class="btn btn-primary float-end">Create New Task</a>
</form>
<table class="table table-striped">
    <thead>
        <tr><th>Title</th><th>Due Date</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
